CC=gcc
SRC=$(wildcard *.c)
OBJ=$(SRC:.c=.o)
NAME=school
RM= rm -f
CFLAGS= -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(NAME) *~ $(OBJ)

re: fclean all

